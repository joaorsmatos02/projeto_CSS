<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<StackPane fx:id="pane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.desktopapp.menu.MenuController">

	<HBox fx:id="topHbox" alignment="top_left">
		<Button fx:id="logOut" text="Sair" onAction="#logOut" />
		<Button fx:id="moreOptions" text="Mais" onAction="#moreOptions" />
		<Label fx:id="title" text="Democracia 2" alignment="top_left"></Label>
	</HBox>

	<GridPane fx:id="menuGrid" alignment="center">
		<children>
		    <Button fx:id="listPolls" text="Consultar votações em curso" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#listPolls" />
		    <Button fx:id="consultProjects" text="Consultar projetos de lei" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#consultProjects" />
		    <Button fx:id="supportProjects" text="Apoiar projetos de lei" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#supportProjects" />
		    <Button fx:id="votePoll" text="Votar numa proposta" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#votePoll" />
		</children>
	</GridPane>

</StackPane>
